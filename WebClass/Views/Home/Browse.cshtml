@model WebClass.Models.C_Class
@{
    ViewBag.Title = "課程瀏覽";
}

<style>

    .SortButtonColor1 {
        background: #fff;
        color: black;
    }

    .SortButtonColor2 {
        background: #6c757d;
        color: white;
    }



    .product-grid2 {
        position: relative
    }

        .product-grid2 .product-image2 {
            overflow: hidden;
            position: relative
        }

            .product-grid2 .product-image2 a {
                display: block
            }

            .product-grid2 .product-image2 img {
                width: 100%;
                height: 180px;
            }

    .product-image2 .pic-1 {
        opacity: 1;
        transition: all .5s
    }

    .product-grid2:hover .product-image2 .pic-1 {
        opacity: 0.5
    }

    .product-grid2 .social {
        padding: 0;
        margin: 0;
        position: absolute;
        bottom: 50px;
        right: 25px;
        z-index: 1
    }

        .product-grid2 .social li {
            margin: 0 0 10px;
            display: block;
            transform: translateX(100px);
            transition: all .5s
        }

    .product-grid2:hover .social li {
        transform: translateX(0)
    }

        .product-grid2:hover .social li:nth-child(2) {
            transition-delay: .15s
        }

        .product-grid2:hover .social li:nth-child(3) {
            transition-delay: .25s
        }

    .product-grid2 .social li a {
        color: #505050;
        background-color: #fff;
        font-size: 17px;
        line-height: 45px;
        text-align: center;
        height: 35px;
        width: 35px;
        border-radius: 50%;
        display: block;
        transition: all .3s ease 0s
    }

        .product-grid2 .social li a:hover {
            color: #fff;
            background-color: #3498db;
            box-shadow: 0 0 10px rgba(0,0,0,.5)
        }


            .product-grid2 .social li a:hover:after, .product-grid2 .social li a:hover:before {
                opacity: 1
            }

    .product-grid2 .add-to-cart {
        color: #fff;
        background-color: #404040;
        font-size: 15px;
        text-align: center;
        width: 100%;
        padding: 10px 0;
        display: block;
        position: absolute;
        left: 0;
        bottom: -100%;
        transition: all .3s
    }

        .product-grid2 .add-to-cart:hover {
            background-color: #3498db;
            text-decoration: none
        }

    .product-grid2:hover .add-to-cart {
        bottom: 0
    }

    .product-grid2 .product-new-label {
        background-color: #3498db;
        color: #fff;
        font-size: 17px;
        padding: 5px 10px;
        position: absolute;
        right: 0;
        top: 0;
        transition: all .3s
    }

    .product-grid2:hover .product-new-label {
        opacity: 0
    }

    .product-grid2 .product-content {
        padding: 20px 10px;
        text-align: center
    }

    .product-grid2 .title {
        font-size: 17px;
        margin: 0 0 7px
    }

        .product-grid2 .title a {
            color: #303030
        }

            .product-grid2 .title a:hover {
                color: #3498db
            }

    .product-grid2 .price {
        color: #303030;
        font-size: 15px
    }
</style>

@*網狀背景*@
@*@Html.Partial("ParticlesView")*@
<div class="container" style="margin-top:5%">
    @*==========顯示大標題跟切換用選單==========*@
    <div>
        <div style="margin-left:5%" class="float-left">
            @if (ViewBag.type == 0)
            {
                <h1 id="classlabelH1">所有課程</h1>
                
            }
            else
            {
                <h1 id="classlabelH1">
                    @ViewBag.typename
                </h1>
            }

        </div>
        <div style="margin-left:60%;margin-bottom:30px;">
            <div class="btn btn-outline-secondary btndiv SortButtonColor2" id="NewClasBtn" onclick="Sort('NewClass','最新課程')">
                <img src="~/images/snew.png" />
                <span>最新課程</span>
            </div>
            <div class="btn btn-outline-secondary btndiv SortButtonColor1" id="HotClassBtn" onclick="Sort('HotClass','熱門課程')">
                <img src="~/images/sfire.png" />
                <span>熱門課程</span>
            </div>
            <div class="btn btn-outline-secondary btndiv SortButtonColor1" id="HighestRatingBtn" onclick="Sort('HighestRating','最高評價課程')">
                <img src="~/images/smedal.png" />
                <span>最高評價</span>
            </div>
        </div>
    </div>
    @*==========顯示大標題跟切換用選單==========*@
    @*==========顯示主要頁面==========*@
    <div id="_Browse">
        <div id="ajx">
            @Html.Action("_ClassBrowse", "Home")
        </div>
    </div>
    @*==========顯示主要頁面==========*@
</div>


@*==========顯示彈出頁面==========*@
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">提示</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p id="modaltext"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">關閉</button>
            </div>
        </div>
    </div>
</div>
@*==========顯示彈出頁面==========*@


<script>


   
    //以下更改Btn樣式===
    $('.btndiv').click(function () {
        $('.btndiv').removeClass("SortButtonColor2").addClass("SortButtonColor1");
        $(this).removeClass("SortButtonColor1").addClass("SortButtonColor2");
    });

    $(".btndiv").on("hover", function () {
        $(".btndiv").removeClass("SortButtonColor2").addClass("SortButtonColor1");
        $(this).removeClass("SortButtonColor1").addClass("SortButtonColor2");

    })
    //以上更改Btn樣式===


//排序
    var SortType = "";
    function Sort(type,typename) {
        $.ajax({
            type: 'GET',
            url: `@Url.Action("_ClassBrowse", "Home")`,
            data: { SortType: type }
        }).done(function (data) {
            $('#ajx').html(data);
            $('#classlabelH1').text(typename);
            }).done(SortType=type);
    }

function ChangePage(page) {
        $.ajax({
            type: 'GET', url: `@Url.Action("_ClassBrowse","Home")?id=${@ViewBag.type}&ClassName=${"@ViewBag.search"}&SortType=${SortType}`,
            data: { page: page }
        }).done(function (data) {
            $('#ajx').html(data);
            $('html,body').animate({ scrollTop: 0 });
        })
    }

    //加入收藏
    function AddFollow(ProductsID) {
        $.ajax({
            type: 'POST', url: '@Url.Action("AddFollow", "Follow")',
            data: { id: ProductsID },
            success: function (data) {
                switch (data) {
                    case "已收藏此課程": {
                        Modal("此課程已加入收藏 !");
                        break;
                    }
                    case "尚未登入": {
                        Modal("請先登入 !");
                       setTimeout(function () {window.location.href = '@Url.Action("Login", "User")'}, 2000);
                        break;
                    }
                    case "成功加入收藏": {
                        Modal("成功加入收藏 !");
                    }
                }
            }
        })
    };

    //加入購物車
    function AddToCart(ProductsID) {
        $.ajax({
            type: 'POST', url: '@Url.Action("AddToCart", "ShoppingCar")',
            data: { id: ProductsID },
            success: function (data) {
                switch (data) {
                    case "已報名此課程": {
                        Modal("已報名此課程 !");
                        break;
                }
                        case "課程已在購物車": {
                        Modal("課程已在購課清單 !");
                        break;
                }
                    case "尚未登入": {
                        Modal("請先登入 !");
                        setTimeout(function () {window.location.href = '@Url.Action("Login", "User")'}, 2000);
                        break;
                }
                    case "": {
                    $.ajax({
                        type: 'GET', url: '@Url.Action("_Cart", "Home")',
                        success: function (data) {
                            $('#ddd').html(data);
                            Modal("加入購課清單成功 !");
                        }
                    })
                }
               }
            }
        })
    };

    function Modal(text) {
        $('#modaltext').text(text);
        $('#exampleModalCenter').modal('show');
        setTimeout(function () { $('#exampleModalCenter').modal('hide') }, 3000);
    };

</script>
