@model WebClass.Models.C_Lesson

<h2>修改單元內容</h2>

<div class="container">
    <div class="row">
        @using (Html.BeginForm("Edit", "Lesson", FormMethod.Post, new { enctype = "multipart/form-data", id = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.EditorFor(c => c.LessonID, new { htmlAttributes = new { @Class = "form-control", Hidden = "Hidden" } })
            @Html.EditorFor(c => c.ClassID, new { htmlAttributes = new { @Class = "form-control", Hidden = "Hidden" } })
            <div class="form-group">
                @Html.LabelFor(c => c.LessonName)
                @Html.EditorFor(c => c.LessonName, new { htmlAttributes = new { @Class = "form-control", @Required = "Required", maxlength = "25" } })
                @Html.ValidationMessageFor(c => c.LessonName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(c => c.LessonVideo)
                @Html.EditorFor(c => c.LessonVideo, new { htmlAttributes = new { @Class = "form-control", @Required = "Required", placeholder = "http://" } })
                @Html.ValidationMessageFor(c => c.LessonVideo, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(c => c.LessonContent)
                @Html.EditorFor(c => c.LessonContent, new { htmlAttributes = new { @Class = "form-control", @Required = "Required" } })
                @Html.ValidationMessageFor(c => c.LessonContent, "", new { @class = "text-danger" })
            </div>
            <button type="submit" id="submit" class="btn btn-primary">修改單元</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">關閉頁面</button>
        }
    </div>
</div>