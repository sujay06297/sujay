@model IEnumerable<WebClass.Models.C_Class>

@{
    ViewBag.Title = "進階搜索";
}

<script src="~/Scripts/Cloud/js/epmrgo.js"></script>
<link href="~/Scripts/Cloud/css/style.css" rel="stylesheet" />

<style>
    table {
        font-weight: bold;
    }
</style>

<div class="container" style="padding:7%; font-weight:bold;">
    @using (Html.BeginForm("Search", "Home", FormMethod.Get))
    {
        <div class="container container-fluid" style="margin:5%">
            <a>搜尋課程名稱:</a>
            @Html.TextBox("ClassName")<br /><br />
            <a>搜尋老師名稱:</a>
            @Html.TextBox("UserName")<br /><br />
            <a>搜尋類別名稱:</a>
            @*@Html.TextBox("ClassTypeName")<br /><br />*@
            @Html.DropDownList("ClassTypeName", new SelectList(ViewBag.List), "請選擇")<br /><br />
            <a>搜尋時間範圍:</a>
            <input name="RegisterTimeMin" type="date" width="10" class="date" /><a>~</a><input name="RegisterTimeMax" type="date" width="10" class="date" />
            <input type="submit" class="btn btn-info" value="搜尋">
        </div>
    }

    <table class="table">
        <thead>
            <tr style="border:hidden; color:green">
                <th>課程名稱</th>
                <th>授課人</th>
                <th>課程類型</th>
                <th>開始時間</th>
            </tr>
        </thead>
        <tbody>

            @if (Model.Count() != 0)
            {
                foreach (var v in Model)
                {
                    <tr style="border:hidden">
                        <td>@v.ClassName</td>
                        <td>@v.U_User.UserName</td>
                        <td>@v.C_ClassType.ClassTypeName</td>
                        <td>@v.RegisterTime</td>
                        <td>@Html.ActionLink("細節", "Detial", "Class", new { id = v.ClassID }, new { @class = "btn btn-success" })</td>
                    </tr>

                }
            }
        </tbody>
    </table>
</div>



